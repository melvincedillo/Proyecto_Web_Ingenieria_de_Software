
@{
    ViewBag.Title = "Agendar Cita";
} 



<div class="d-flex justify-content-center backAgendarCita">
    <div class="mt-5 mb-5 formAgendarCita">
        <form class="mt-3">
            <div class="row mb-3 text-center">
                <h2>AGENDA TU CITA</h2>
            </div>

            <div class="row mb-3">
                <div class="col-1 col-form-label">
                    <i class="fa-solid fa-gem iconFormAgendar"></i>
                </div>
                <label for="inputServicio" class="col-3 col-form-label">Servicio</label>
                <div class="col-8">
                    <select class="form-select" id="inputServicio">
                        <option selected>Seleccione un servicio</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-1 col-form-label">
                    <i class="fa-solid fa-user iconFormAgendar"></i>
                </div>
                <label for="inputName" class="col-3 col-form-label">Nombre</label>
                <div class="col-8">
                    <input type="text" class="form-control" id="inputName" placeholder="Nombre" />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-1 col-form-label">
                    <i class="fa-solid fa-phone iconFormAgendar"></i>
                </div>
                <label for="inputPhone" class="col-3 col-form-label">Telefono</label>
                <div class="col-8">
                    <input type="tel" class="form-control" id="inputPhone" placeholder="Telefono" />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-1 col-form-label">
                    <i class="fa-solid fa-calendar-days iconFormAgendar"></i>
                </div>
                <label for="inputFecha" class="col-3 col-form-label">Fecha</label>
                <div class="col-8">
                    <input type="date" class="form-control" id="inputFecha" placeholder="Fecha de cita" />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-1 col-form-label">
                    <i class="fa-solid fa-clock iconFormAgendar"></i>
                </div>
                <label for="inputHora" class="col-3 col-form-label">Hora</label>
                <div class="col-8">
                    <select class="form-select" id="inputHora">
                        <option selected>Seleccione una hora</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-1 col-form-label">
                    <i class="fa-solid fa-sack-dollar iconFormAgendar"></i>
                </div>
                <label for="inputP" class="col-3 col-form-label">Precio</label>
                <div class="col-8">
                    <label for="inputPrecio" class="col-form-label-lg">0.00 Lps</label>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-12 d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Agendar Cita</button>
                </div>
            </div>
        </form>
    </div>
</div>
