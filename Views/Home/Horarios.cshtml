<!--Modal configurar horario-->
<div class="modal fade" id="modalHorario" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content divModals">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Configuración de Horarios</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <!--Lunes-->
                    <div class="row mb-2">
                        <div class="form-check col-3">
                            <input class="form-check-input" type="checkbox" value="" id="checkLunes">
