@model List<Proyecto_Web_Ingenieria_de_Software.Models.ViewModels.UserViewModel>
@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="~/Content/styleUsuarios.css" />

<div class="usuariosDiv mb-5">
    <div class="row">
        <div class="col-8">
            <h1 class="t-stroke">Usuarios del sistema</h1>
        </div>
        <div class="col-4 d-flex justify-content-end">
            <a href="" data-bs-toggle="modal" data-bs-target="#modalAddUser">
                <i class="fa-solid fa-user-plus addUser"></i>
            </a>
        </div>
    </div>
    <hr class="text-black-50" />
    <div class="table-responsive">
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Creación</th>
                    <th scope="col">Usuario</th>
                    <th scope="col">Estado</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var user in Model)
            {
                <tr>
                    <td>@user.ID</td>
                    <td>@user.dateCreate</td>
                    <td>@user.userName</td>
                    <td>@user.userActive</td>
                    <td>
                        <a href="" data-bs-toggle="modal" data-bs-target="#modalInfoUser">
                            <i class="fa-solid fa-circle-info infoUser"></i>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

<!--Modal agregar usuario nuevo-->
<div class="modal fade" id="modalAddUser" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content divModals">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Agregar Nuevo Usuario</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="col">
                            <label class="form-label">Nombre</label>
                            <input class="form-control" type="text" name="firstName" />
                        </div>
                        <div class="col">
                            <label class="form-label">Apellido</label>
                            <input class="form-control" type="text" name="lastName" />
                        </div>
                    </div>

                    <div class="row mt-2">
                        <div class="col">
                            <label class="form-label">DNI</label>
                            <input class="form-control" type="text" name="DNI" />
                        </div>
                        <div class="col">
                            <label class="form-label">Telefono</label>
                            <input class="form-control" type="tel" name="phone" />
                        </div>
                    </div>

                    <div class="row mt-2">
                        <div class="col">
                            <label class="form-label">Rol</label>
                            <input class="form-control" type="text" name="rol" />
                        </div>

                        <div class="col">
                            <label class="form-label">Sexo</label>
                            <div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="sexo" id="inlineRadio1" value="M">
                                    <label class="form-check-label" for="inlineRadio1">Hombre</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="sexo" id="inlineRadio2" value="F">
                                    <label class="form-check-label" for="inlineRadio2">Mujer</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-2">
                        <div class="col">
                            <label class="form-label">Usuario</label>
                            <input class="form-control" type="text" name="username" />
                        </div>
                        <div class="col">
                            <label class="form-label">Contraseña</label>
                            <input class="form-control" type="password" name="password" />
                        </div>
                    </div>

                    <div class="mt2">
                        <label class="form-label">Permisos</label>
                    </div>

                    <div class="mt-3 modal-footer">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-success">Agregar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!--Modal detalle de usuario-->
<div class="modal fade" id="modalInfoUser" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content divModals">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Detalles de usuario</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row mt-3 align-items-center">
                        <div class="col-auto">
                            <label for="inputFecha" class="col-form-label">Fecha</label>
                        </div>
                        <div class="col-auto">
                            <input type="date" id="inputFecha" class="form-control">
                        </div>
                    </div>
                    <div class="row mt-3 align-items-center">
                        <div class="col-auto">
                            <label for="inputMotivo" class="col-form-label">Motivo</label>
                        </div>
                        <div class="col-9">
                            <input type="text" id="inputMotivo" class="form-control">
                        </div>
                    </div>

                    <div class="mt-3 modal-footer">
                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Aceptar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

