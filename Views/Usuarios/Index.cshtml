
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model List<Proyecto_Web_Ingenieria_de_Software.Models.ViewModels.UserViewModel>

<link rel="stylesheet" href="~/Content/styleUsuarios.css" />

<div class="usuariosDiv mb-5">
    <div class="row">
        <div class="col-8">
            <h1 class="t-stroke">Usuarios del sistema</h1>
        </div>
        <div class="col-4 d-flex justify-content-end">
            <a href="/Usuarios/Agregar">
                <i class="fa-solid fa-user-plus addUser"></i>
            </a>
        </div>
    </div>
    <hr class="text-black-50" />
    <div class="table-responsive">
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Creación</th>
                    <th scope="col">Usuario</th>
                    <th scope="col">Estado</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.ID</td>
                        <td>@user.dateCreate</td>
                        <td>@user.userName</td>
                        <td>
                            @user.userActive
                            <a href="">
                                <i class="fa-solid fa-rotate-left infoUser"></i>
                            </a>
                        </td>
                        <td>
                            <a href="">
                                <i class="fa-solid fa-user-pen infoUser"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
